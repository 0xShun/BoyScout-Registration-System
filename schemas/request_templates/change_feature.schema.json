{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Change Feature Request",
  "type": "object",
  "required": ["summary", "current_behavior", "desired_behavior", "acceptance_criteria", "priority"],
  "properties": {
    "summary": { "type": "string", "minLength": 5 },
    "current_behavior": { "type": "string", "minLength": 5 },
    "desired_behavior": { "type": "string", "minLength": 5 },
    "acceptance_criteria": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "files_likely_affected": { "type": "array", "items": { "type": "string" } },
    "data_migration": { "type": "string" },
    "priority": { "type": "string", "enum": ["low", "medium", "high"] }
  },
  "additionalProperties": false
}
