# ============================================
# ScoutConnect Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# ENVIRONMENT
# ============================================
# Options: development, test, production
# - development: Use LIVE PayMongo keys for testing real QR payments
# - test: Use TEST keys for automated tests (no real money)
# - production: Use LIVE keys with production domain
ENVIRONMENT=development

# ============================================
# DJANGO
# ============================================
SECRET_KEY=change-me-to-random-50-chars
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# EMAIL (Gmail SMTP or your provider)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=ScoutConnect <your-email@gmail.com>

# ============================================
# TWILIO SMS (Optional)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=

# ============================================
# PAYMONGO PAYMENT GATEWAY
# ============================================
# TEST Keys (for automated tests - no real money)
PAYMONGO_TEST_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYMONGO_TEST_SECRET_KEY=sk_test_xxxxxxxxxxxxx
PAYMONGO_TEST_WEBHOOK_SECRET=whsk_xxxxxxxxxxxxx

# LIVE Keys (for real QR PH payments - REAL MONEY!)
# Get these from: https://dashboard.paymongo.com/developers
PAYMONGO_LIVE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYMONGO_LIVE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
PAYMONGO_LIVE_WEBHOOK_SECRET=whsk_xxxxxxxxxxxxx

# Active keys (set these to LIVE for development testing)
PAYMONGO_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYMONGO_SECRET_KEY=sk_live_xxxxxxxxxxxxx
PAYMONGO_WEBHOOK_SECRET=whsk_xxxxxxxxxxxxx

# ============================================
# QR PH PAYMENT SETTINGS
# ============================================
QRPH_MERCHANT_ID=your_merchant_id
QRPH_MERCHANT_NAME=ScoutConnect
QRPH_ACCOUNT_NUMBER=your_account_number
QRPH_MERCHANT_CITY=Manila

# ============================================
# WEBHOOK URL (for PayMongo)
# ============================================
# Development (use ngrok): https://abc123.ngrok.io
# Production: https://yourdomain.com
WEBHOOK_BASE_URL=http://localhost:8000

# ============================================
# TEST HELPERS
# ============================================
TEST_EMAIL_TO=test-recipient@example.com
TEST_SMS_TO=+639xxxxxxxxx

# ============================================
# CHANNELS (Realtime Notifications)
# ============================================
# Options: IN_MEMORY (dev), REDIS (production)
CHANNEL_LAYER_BACKEND=IN_MEMORY
